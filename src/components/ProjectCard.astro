---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image?: string;
  link?: string;
  stack: string[];
}

const { title, description, image, stack } = Astro.props;
---

<div
  class="hover:bg-slate-700 transition-all border-t-2 border-l-2 border-slate-600 bg-slate-800 rounded-lg p-4 flex flex-col justify-between gap-4"
>
  <div class="flex flex-col gap-4">
    { image ?
      <Image
            width={300}
            height={220}
            src={image}
            alt={title}
            class="rounded-lg w-full h-55 object-cover"
          /> :
      <div class="w-full h-55 bg-slate-900 rounded-lg">
        <div class="flex justify-center items-center h-full">
          <span class="text-blue-300 text-4xl">ðŸš§</span>
        </div>
      </div>
    
    }
    

    <div class="flex flex-col gap-2">
      <h3 class="text-xl font-semibold">{title}</h3>
      <p class="text-slate-300">{description}</p>
    </div>
  </div>
  <div class="flex flex-col gap-2">
    <div class="flex gap-2">
      {
        stack.map((item) => (
          <span class="text-blue-200 bg-blue-800 px-2 py-1 rounded-lg">
            {item}
          </span>
        ))
      }
    </div>
  <!-- <span class="text-blue-300 w-full rounded-lg">View case study</span> --> 
  </div>
</div>
