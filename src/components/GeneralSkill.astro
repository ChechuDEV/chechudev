---
import { Image } from "astro:assets";

interface Props {
  name: string;
  description: string;
  icon: string;
}

const { name, description, icon } = Astro.props;
---

<div class="flex flex-col items-center gap-4">
  <Image
    src={icon}
    alt={name}
    width={64}
    height={64}
    class="w-16 h-16 mx-auto transition-all hover:scale-105"
  />
  <h4 class="text-lg font-semibold text-center">{name}</h4>
  <p class="text-slate-300 text-center w-full">{description}</p>
</div>
